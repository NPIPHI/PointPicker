{
    "compilerOptions": {
        "lib": ["es2020", "DOM"],
        "module": "commonjs",
        "target": "es2020",
        "noImplicitAny": true,
        "outDir": "public",
        // "sourceMap": true,   
        "declaration": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
    },
    "exclude": ["webpack*", "public"],
  }